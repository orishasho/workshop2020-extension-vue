{
  "name": "workshop2020-extension-vue",
  "description": "A Vue.js web extension",
  "version": null,
  "manifest_version": 2,
  "icons": {
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "browser_action": {
    "default_title": "workshop2020-extension-vue",
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [{
    "matches": ["https://mtamn.mta.ac.il/yedion/fireflyweb.aspx*"],
    "all_frames": true,
    "js": ["content.js"],
    "css": ["content.css"]
  }],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "activeTab",
    "tabs",
    "https://mtamn.mta.ac.il/yedion/fireflyweb.aspx*",
    "https://api.punkapi.com/v2/beers"
  ]
}

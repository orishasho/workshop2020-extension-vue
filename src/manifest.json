{
    "name": "workshop2020-extension-vue",
    "description": "A Vue.js web extension",
    "version": null,
    "manifest_version": 2,
    "icons": {
        "128": "icons/logo8.png"
    },
    "browser_action": {
        "default_title": "workshop2020-extension-vue",
        "default_popup": "popupMenu/popupMenu.html"

    },
    "content_scripts": [{
        "matches": [
            "https://mtamn.mta.ac.il/yedion/fireflyweb.aspx*",
            "https://wwwi.colman.ac.il/yedion/fireflyweb.aspx*"
        ],
        "all_frames": true,
        "js": ["content.js"],
        "css": ["content.css"]
    }],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "permissions": [
        "activeTab",
        "tabs",
        "https://mtamn.mta.ac.il/yedion/fireflyweb.aspx*",
        "https://wwwi.colman.ac.il/yedion/fireflyweb.aspx*",
        "storage"
    ]
}